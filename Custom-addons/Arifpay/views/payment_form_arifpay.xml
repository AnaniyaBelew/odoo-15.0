<odoo>
    <record id="payment_form_arifpay" model="ir.ui.view">
        <field name="name">payment.acquirer.form.arifpay</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]'  position="inside">
                <field name="arifpay_api_key" attrs="{'invisible': [('provider', '!=', 'arifpay')]}"/>
            </xpath>
        </field>
    </record>
