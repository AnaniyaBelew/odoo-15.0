<odoo>
    <template id="arifpay_form" name="arifpay Payment Form">
        <input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>
         <input type="hidden" name="API_key" t-att-value="Api_key"/>
        <input type="hidden" name="email" t-att-value="email"/>
        <input type="hidden" name="phone" t-att-value="phone"/>
        <input type="hidden" name="cancelUrl" t-att-value="cancelUrl"/>
        <input type="hidden" name="nonce" t-att-value="nonce"/>

        <input type="hidden" name="items" t-att-value="items"/>
        <input type="hidden" name="beneficiaries" t-att-value="beneficiaries"/>
        <input type="hidden" name="successUrl" t-att-value="successUrl"/>

        <input type="hidden" name="expireDate" t-att-value="expireDate"/>
        <input type="hidden" name="paymentMethods" t-att-value="paymentMethods"/>
        <input type="hidden" name="lang" t-att-value="lang"/>
